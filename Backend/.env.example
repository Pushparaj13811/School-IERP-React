# Database connection - Choose ONE of these options:

# Option 1: Standard direct connection (for development)
DATABASE_URL="postgresql://username:password@localhost:5432/school_erp_db"

# Option 2: Connection via PgBouncer (for production with connection pooling)
# DATABASE_URL="postgresql://username:password@localhost:6432/school_erp_db?schema=public&pgbouncer=true&connection_limit=10&pool_timeout=20"
# DIRECT_URL="postgresql://username:password@localhost:5432/school_erp_db?schema=public"

# Option 3: Connection string for current connection
# DATABASE_URL="postgresql://pushparaj:Pushparaj1381@localhost:5432/School"

# Node environment
NODE_ENV=development

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key

# Server port
PORT=3000

# Connection pool configuration (used by external poolers like PgBouncer)
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_TIMEOUT=30000 